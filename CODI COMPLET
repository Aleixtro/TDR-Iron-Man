void lucesojos(){
  digitalWrite(ledPIN , HIGH);
         delay(10);
   digitalWrite(ledPIN , LOW);
         delay(200);
   digitalWrite(ledPIN , HIGH);
         delay(100);
   digitalWrite(ledPIN , LOW);
         delay(300);
   digitalWrite(ledPIN , HIGH);
         delay(300);
}
